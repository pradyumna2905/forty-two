.col-md-6.offset-md-3.my-2
  .card
    .card-body
      %h2= entry.word
      %ol
        - entry.records.each do |record|
          - record.definitions.each do |definition|
            %li.card-text.my-2= definition
          %ol
            - record.examples.each do |example|
              %li.card-text.text-secondary
                %p.font-italic.my-0= example.inspect
      .text-right
        #addToDigest
          = link_to_toggle_save_entry(entry)


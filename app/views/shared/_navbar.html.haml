%nav.d-flex.justify-content-between.align-items-baseline.navbar.navbar-expand-lg.navbar-light.bg-light
  = link_to root_path, class: "no-underline" do
    %h3.d-flex
      .text-black-50 forty
      .text-dark.font-weight-bold two

  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    .d-none.d-sm-block= render 'shared/search'

    %ul.navbar-nav.ml-auto
      %li.nav-item.dropdown.text-center
        = link_to current_user.email, '', class: 'text-dark dropdown-toggle', id: 'dropdownMenuLink', aria: {expanded: false, haspopup: true}, data: {toggle: 'dropdown'}
        .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
          = link_to 'Digest', authenticated_root_path, class: 'dropdown-item'
          = link_to 'History', user_entries_history_path(current_user), class: 'dropdown-item'
          .dropdown-divider
          = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item'

